rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload their own profile pictures
    match /profile_pictures/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public app assets (logos, etc.)
    match /app_assets/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && 
        request.auth.token.email in firestore.get(/databases/(default)/documents/admin_config/settings).data.admin_emails;
    }
    
    // User habit images
    match /habit_images/{userId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}