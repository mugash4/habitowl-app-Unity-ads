rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/admin_config/settings)
        .data.admin_emails.hasAny([request.auth.token.email]);
    }
    
    // ✅ NEW: Helper function to check if offer is system-created
    function isSystemCreatedOffer() {
      return request.resource.data.createdBy == 'auto_system';
    }

    // ✅ User consents - users can only read/write their own
    match /user_consents/{document} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow write: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    // ✅ Crash reports - authenticated users can write, admins can read
    match /crash_reports/{document} {
      allow write: if isSignedIn();
      allow read: if isSignedIn(); // Admins check done in app
    }
    
    // ✅ Deletion requests - users can read/write their own
    match /deletion_requests/{document} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow write: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    // ✅ Data exports log - users can read their own
    match /data_exports/{document} {
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;
      allow write: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }
    
    // ✅ Deleted users archive - admin only
    match /deleted_users_archive/{document} {
      allow read, write: if isSignedIn(); // Admin check done in app
    }
    
    // ✅ Admin actions log - admin only
    match /admin_actions/{document} {
      allow read, write: if isSignedIn(); // Admin check done in app
    }

    // Users collection
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (isOwner(resource.data.uid) || request.resource.data.uid == request.auth.uid || isAdmin());
    }

    // Habits collection
    match /habits/{habitId} {
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
    }

    // Admin config
    match /admin_config/settings {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /admin_config/api_keys {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // ✅ ✅ ✅ FIXED: Promo offers - Admin OR automated system can create
    match /promo_offers/{offerId} {
      // ✅ Anyone authenticated can read active offers
      allow read: if isSignedIn();
      
      // ✅ Allow tracking metric updates for any user OR admin full control
      allow update: if isSignedIn() && (
        // Regular users can ONLY update tracking metrics
        request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['impressions', 'clicks', 'conversions', 'lastImpressionAt', 'lastClickAt', 'lastConversionAt'])
        ||
        // Admins can update any field
        isAdmin()
      );
      
      // ✅ ✅ ✅ PERFECT FIX: Admins OR automated system can create
      // Automated system identifies itself with createdBy: 'auto_system'
      allow create: if isSignedIn() && (
        isAdmin() || 
        isSystemCreatedOffer()
      );
      
      // ✅ Only admins can delete offers
      allow delete: if isAdmin();
    }
  
    // Analytics
    match /analytics/{analyticsId} {
      allow read: if isAdmin();
      allow create: if isSignedIn();
    }

    // Referrals
    match /referrals/{referralId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
    }

    // Support Tickets
    match /support_tickets/{ticketId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && 
        (resource.data.userId == request.auth.uid || isAdmin());
      allow update: if isAdmin();
    }

    // Deny all other requests by default
    match /{document=**} {
      allow read, write: if false;
    }
    
  }
}
