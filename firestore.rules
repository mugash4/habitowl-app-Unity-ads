rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // ✅ FIXED: Helper function to check if user is admin
    function isAdmin() {
      return isSignedIn() && 
        get(/databases/$(database)/documents/admin_config/settings)
        .data.admin_emails.hasAny([request.auth.token.email]);
    }

    // ✅ FIXED: Users collection - Allow admins to read all users
    match /users/{userId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn() && (isOwner(resource.data.uid) || request.resource.data.uid == request.auth.uid || isAdmin());
    }

    // ✅ FIXED: Habits collection - Allow admins to read all habits
    match /habits/{habitId} {
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin());
    }

    // ✅ FIXED: Admin config - Allow admin writes
    match /admin_config/settings {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /admin_config/api_keys {
      allow read: if isAdmin();
      allow write: if isAdmin();
    }

    // Promo offers (read-only for users)
    match /promo_offers/{offerId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }

    // ✅ FIXED: Analytics - Allow admins to read
    match /analytics/{analyticsId} {
      allow read: if isAdmin();
      allow create: if isSignedIn();
    }

    // Referrals
    match /referrals/{referralId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
    }

    // Support Tickets - Users can create, read their own, admins can read all
    match /support_tickets/{ticketId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && 
        (resource.data.userId == request.auth.uid || isAdmin());
      allow update: if isAdmin();
    }
  }
}
